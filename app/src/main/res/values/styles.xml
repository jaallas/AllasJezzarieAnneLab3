<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#83ccd2</item>
        <item name="colorPrimaryDark">#83ccd2</item>
        <item name="colorAccent">#83ccd2</item>
    </style>
    <style name="buttons">
        <item name ="android:layout_width">70dp</item>
        <item name ="android:layout_height">50dp</item>
        <item name ="android:scaleType">fitCenter</item>
        <item name="android:background">#b58096</item>
        <item name="android:padding">5dp</item>
    </style>
    <style name="lol">
        <item name ="android:fontFamily">casual</item>
        <item name ="android:textSize">30sp</item>
        <item name ="android:textStyle">bold</item>
        <item name ="android:layout_width">wrap_content</item>
        <item name ="android:layout_height">wrap_content</item>
        <item name="android:text">Casa Manila</item>
        <item name="android:textColor">#003366</item>/>
    </style>
    <style name="texts">
        <item name ="android:fontFamily">casual</item>
        <item name="android:textSize">15dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">#2d406c</item>/>
    </style>
    <style name="pic">
        <item name="android:layout_height">242dp</item>
        <item name="android:layout_weight">220</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:background">#b58096</item>
    </style>

</resources>
